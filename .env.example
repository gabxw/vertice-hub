# ==============================================
# VÉRTICE E-commerce - Environment Variables
# ==============================================

# ----------------------------------------------
# DATABASE (Supabase PostgreSQL)
# ----------------------------------------------
# Obtenha em: Supabase Dashboard > Settings > Database > Connection String
# Formato: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true
DATABASE_URL="postgresql://postgres:senha@localhost:5432/vertice"

# Connection Pooling (Recomendado para produção)
# Obtenha em: Supabase Dashboard > Settings > Database > Connection Pooling
# Formato: postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1
DIRECT_URL="postgresql://postgres:senha@localhost:5432/vertice"

# ----------------------------------------------
# SERVER
# ----------------------------------------------
NODE_ENV=development
PORT=3000

# ----------------------------------------------
# JWT SECRETS
# ----------------------------------------------
# IMPORTANTE: Gere secrets seguros para produção!
# Comando: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="vertice_super_secret_change_in_production"
JWT_REFRESH_SECRET="vertice_refresh_secret_change_in_production"
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ----------------------------------------------
# FRONTEND URL
# ----------------------------------------------
FRONTEND_URL=http://localhost:5173

# ----------------------------------------------
# CORS
# ----------------------------------------------
CORS_ORIGIN=http://localhost:5173

# ----------------------------------------------
# RATE LIMITING
# ----------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ----------------------------------------------
# MERCADO PAGO (Pagamentos)
# ----------------------------------------------
# Obtenha em: https://www.mercadopago.com.br/developers/panel/app
MP_ACCESS_TOKEN=your_mercado_pago_access_token
MP_PUBLIC_KEY=your_mercado_pago_public_key
MP_WEBHOOK_SECRET=your_webhook_secret

# ----------------------------------------------
# EMAIL (SMTP)
# ----------------------------------------------
# Gmail: smtp.gmail.com (porta 587)
# SendGrid: smtp.sendgrid.net (porta 587)
# Mailgun: smtp.mailgun.org (porta 587)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app
SMTP_FROM=noreply@vertice.com
SMTP_FROM_NAME=VÉRTICE

# ----------------------------------------------
# UPLOAD / STORAGE
# ----------------------------------------------
# Supabase Storage (Opcional)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AWS S3 (Opcional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=vertice-uploads

# ----------------------------------------------
# REDIS (Cache - Opcional para produção)
# ----------------------------------------------
REDIS_URL=redis://localhost:6379

# ----------------------------------------------
# LOGGING
# ----------------------------------------------
LOG_LEVEL=info
