# ==============================================
# VÉRTICE Backend - Environment Variables
# ==============================================
# Copie este arquivo para .env e preencha com seus valores

# ----------------------------------------------
# DATABASE (Supabase PostgreSQL)
# ----------------------------------------------
# 1. Acesse: https://supabase.com/dashboard
# 2. Selecione seu projeto
# 3. Vá em: Settings > Database
# 4. Copie a "Connection String" (Transaction Mode)

# Connection String (Transaction Mode - para migrations)
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres"

# Connection Pooling (Session Mode - para aplicação)
# Obtenha em: Settings > Database > Connection Pooling
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Exemplo local (desenvolvimento):
# DATABASE_URL="postgresql://postgres:senha@localhost:5432/vertice"
# DIRECT_URL="postgresql://postgres:senha@localhost:5432/vertice"

# ----------------------------------------------
# SERVER
# ----------------------------------------------
NODE_ENV=development
PORT=3000

# ----------------------------------------------
# JWT SECRETS (IMPORTANTE: Altere em produção!)
# ----------------------------------------------
# Gere secrets seguros com:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

JWT_SECRET="ALTERE_ESTE_SECRET_EM_PRODUCAO_MIN_32_CARACTERES"
JWT_REFRESH_SECRET="ALTERE_ESTE_REFRESH_SECRET_EM_PRODUCAO_MIN_32_CARACTERES"
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ----------------------------------------------
# FRONTEND
# ----------------------------------------------
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# ----------------------------------------------
# RATE LIMITING
# ----------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ----------------------------------------------
# MERCADO PAGO (Opcional - para pagamentos)
# ----------------------------------------------
# Obtenha em: https://www.mercadopago.com.br/developers/panel/app
MP_ACCESS_TOKEN=
MP_PUBLIC_KEY=
MP_WEBHOOK_SECRET=

# ----------------------------------------------
# EMAIL (Opcional - para recuperação de senha)
# ----------------------------------------------
# Gmail: Use "Senhas de app" (https://myaccount.google.com/apppasswords)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@vertice.com
SMTP_FROM_NAME=VÉRTICE

# ----------------------------------------------
# STORAGE (Opcional)
# ----------------------------------------------
# Supabase Storage
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ----------------------------------------------
# CACHE (Opcional - para produção)
# ----------------------------------------------
REDIS_URL=redis://localhost:6379

# ----------------------------------------------
# LOGGING
# ----------------------------------------------
LOG_LEVEL=info
